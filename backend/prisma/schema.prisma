generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int      @id @default(autoincrement())
  type        String
  category    String
  title       String
  location    String
  area        String?
  duration    String?
  description String?
  image       String
  images      String[]
  coordinates Float[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  showInGlobe Boolean  @default(true)

  @@index([type])
  @@index([category])
}
